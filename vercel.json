{
  "version": 2,
  "builds": [
    {
      "src": "quiz_project/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "quiz_project/wsgi.py"
    }
  ],
  "buildCommand": "chmod +x build.sh && ./build.sh"
} 